    android:checked="false"
    android:text="Ans0" />

<RadioButton
    android:id="@+id/answer1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="false"
    android:text="Ans1" />

<RadioButton
    android:id="@+id/answer2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="false"
    android:text="Ans2" />

<RadioButton
    android:id="@+id/answer3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="false"
    android:text="Ans3" />
</RadioGroup>

    </LinearLayout>